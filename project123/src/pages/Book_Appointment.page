<apex:page standardController="Appointment__c">
  <apex:form >
  <apex:pagemessages />
  <apex:pageBlock title="Book Appointment">
  <apex:pageblockSection title="Book" collapsible="false">
  <apex:inputField value="{!Appointment__c.Name}"/>
  <apex:inputField value="{!Appointment__c.Date_of_Appointment__c}"/>
  <apex:inputField value="{!Appointment__c.Doctor__c}"/>
  <apex:inputField value="{!Appointment__c.Patient__c}"/>
  <apex:inputField value="{!Appointment__c.Status__c}"/>
  <apex:inputField value="{!Appointment__c.Time_Slot__c}"/>
  </apex:pageBlockSection>
  <apex:pageBlockButtons >
   <apex:commandButton value="save" action="{!save}"/>
