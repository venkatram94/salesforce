<apex:page StandardController="Product__c" sidebar="false" showHeader="false" >
<apex:form >
  <apex:pageBlock title="Add Products">
          <apex:pageBlockSection >
                  <apex:inputField value="{!Product__c.name}"/>
                  <apex:inputfield value="{!Product__c.Product_Price__c}"/>
                  <apex:inputfield value="{!Product__c.Quantity__c}"/>
          </apex:pageBlockSection>
          <apex:pageBlockButtons location="bottom">
              <apex:commandButton action="{!save}" value="save"/>
              <apex:commandButton action="{!cancel}" value="cancel"/>
          </apex:pageBlockButtons>
  </apex:pageBlock>
</apex:form>
</apex:page>