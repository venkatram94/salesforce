<apex:page standardcontroller="Login__c" sidebar="false" showHeader="false" extensions="loginExt">
         <apex:form >
             <apex:PageBlock title="Login">
             <apex:pageBlockSection >
                     <apex:inputText label="User Name" value="{!Login__c.name}" id="username"/><br></br>
                     <apex:inputSecret label="Password" value="{!Login__c.Password__c}" id="password"/>
                     <apex:inputField value="{!Login__c.Login_As__c}"/>
             </apex:pageBlockSection>
             <apex:pageBlockButtons location="bottom" >
                 <apex:commandButton value="submit" action="{!submit}"/>
             </apex:pageBlockButtons>
            
             </apex:PageBlock>
         </apex:form>    
</apex:page>